# Copy this file to .env and update the values below


# TimescaleDB Tiger Cloud connection details
DB_HOST=your-host.tsdb.cloud.timescale.com
DB_PORT=37813
DB_NAME=tsdb
DB_USER=tsdbadmin
DB_PASSWORD=password-here

# Database usage (must be true for TimescaleDB Tiger Cloud)
USE_DATABASE=true

# Directory for RAG index files
INDEX_DIR=data

# API Configuration

# API server settings
API_HOST=127.0.0.1
API_PORT=8000

# Base URL for client applications
API_BASE=http://127.0.0.1:8000

# OpenAI comfig (Optional)
OPENAI_API_KEY=sk-openai-api-key-here

# OpenAI model to use
OPENAI_MODEL=gpt-4o-mini

# Embeddings Configuration

EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
